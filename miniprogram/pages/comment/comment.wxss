.detail-container{
  height: 400rpx;
  filter: blur(40rpx);
  opacity: .4;
}
.detail-mask{
  position: absolute;
  width: 100%;
  height: 400rpx;
  background-color: #333;
  top:0;
  left: 0;
  z-index: -1;
}
.detail-img{
  width: 280rpx;
  height: 400rpx;
  margin-right: 24rpx;
}
.comment-content{
  border: 1px solid #ccc;
  width: 100%;
  box-sizing: border-box;
  font-size: 32rpx;
  border-radius: 8rpx;
  padding: 20rpx;
}
.commnet{
  padding: 10rpx
}
.comment-image image{
  width: 200rpx;
  height: 100rpx;
  margin: 10rpx;
}
.detail-info{
  display: flex;
  position: absolute;
  top:0;
  left:0;
  width: 100%;
  height: 100rpx;
}
.desc{
  padding: 20rpx;
  color: #555;
  font-size: 24rpx;
}

.detail{
  color: white;
}
